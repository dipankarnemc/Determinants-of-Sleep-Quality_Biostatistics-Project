name: Render Figures

on:
  push:
    paths:
      - "R/**"
      - "data/**"

jobs:
  render:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v3

    - name: Set up R
      uses: r-lib/actions/setup-r@v2

    - name: Install packages
      uses: r-lib/actions/setup-r-dependencies@v2

    - name: Run figure scripts
      run: |
        Rscript R/01_data_preparation.R
        Rscript R/02_descriptive_analysis.R
        Rscript R/03_regression_models.R
        Rscript R/04_figures.R

    - name: Upload figures as artifacts
      uses: actions/upload-artifact@v3
      with:
        name: figures
        path: figures/
